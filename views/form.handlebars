<!-- views/form.handlebars -->
<form action="/post/create" method="POST">
  <input type="text" name="title" placeholder="Title"><br>
  <textarea name="body" rows="4" cols="50" placeholder="Write your post"></textarea><br>
  <input type="submit" value="Create Post">
</form>

<form action="/post/edit/{{ post.id }}" method="POST">
  <input type="text" name="title" value="{{ post.title }}"><br>
  <textarea name="body" rows="4" cols="50">{{ post.body }}</textarea><br>
  <input type="submit" value="Edit Post">
</form>

<form action="/comment/edit/{{ comment.id }}" method="POST">
  <textarea name="comment" rows="4" cols="50">{{ comment.comment }}</textarea><br>
  <input type="submit" value="Edit Comment">
</form>
