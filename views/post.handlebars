<!-- views/post.handlebars -->
<div class="post">
  <h2>{{ post.title }}</h2>
  <p>{{ post.body }}</p>
  <p>Published on {{ formatDate post.createdAt }}</p>
</div>

<h3>Comments</h3>
{{#if comments.length}}
  {{#each comments}}
    <div class="comment">
      <p>{{ comment }}</p>
      <p>By {{ username }} on {{ formatDate createdAt }}</p>
    </div>
  {{/each}}
{{else}}
  <p>No comments yet.</p>
{{/if}}

<form action="/comment/new/{{ post.id }}" method="POST">
  <textarea name="comment" rows="4" cols="50"></textarea><br>
  <input type="submit" value="Submit Comment">
</form>
