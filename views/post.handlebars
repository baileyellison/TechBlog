<h1>{{post.title}}</h1>
<p>{{post.content}}</p>
<h2>Comments</h2>
<div>
  {{#each comments}}
    <div class="comment">
      <p>{{comment_text}}</p>
      <p><strong>{{user.username}}</strong></p>
    </div>
  {{/each}}
</div>
{{#if loggedIn}}
  <form id="comment-form" data-id="{{id}}">
    <textarea id="comment-text" placeholder="Add a comment"></textarea>
    <button type="submit">Submit</button>
  </form>
{{else}}
  <p>Please <a href="/form">login</a> or <a href="/signup">sign up</a> to comment.</p>
{{/if}}